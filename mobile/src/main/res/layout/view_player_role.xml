<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPlayer"
        android:layout_width="@dimen/thumb_width"
        android:layout_height="@dimen/thumb_height" />

    <ProgressBar
        android:id="@+id/pbLoading"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ivPlayer"
        android:layout_alignEnd="@id/ivPlayer"
        android:layout_alignStart="@id/ivPlayer"
        android:layout_alignTop="@id/ivPlayer"
        android:layout_gravity="center"
        android:padding="@dimen/spacing_normal"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_toEndOf="@+id/ivPlayer"
        android:textSize="@dimen/medium_text_size"
        tools:text="Amaury" />

    <ImageView
        android:id="@+id/ivRole"
        android:layout_width="@dimen/thumb_width"
        android:layout_height="@dimen/thumb_height"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_help_black_24dp"
        android:tint="@color/colorAccent" />

</RelativeLayout>